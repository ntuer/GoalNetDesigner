<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntu.goalnetdesigner.viewcontroller.login.ResetPasswordController">
	<padding>
		<Insets bottom="10" left="25" right="25" top="25" />
	</padding>
   <children>
   	<Text text="Reset Password" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
   
   	<Label text="Password:" GridPane.rowIndex="5" />
   
   	<TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   
   	<Label text="Confirm Password" GridPane.rowIndex="6" />
   
   	<PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   	<HBox alignment="CENTER" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="9">
      <children>
            <Button mnemonicParsing="false" onAction="#resetClicked" text="Reset" />
            <Button mnemonicParsing="false" onAction="#cancelClicked" text="Cancel" />
      </children>
   	</HBox>
   
   	<Text fx:id="actiontarget" wrappingWidth="98.0" GridPane.rowIndex="8" />
      <Label text="User Name:" GridPane.rowIndex="2" />
      <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="questionField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="answerField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Label text="Security Question:" GridPane.rowIndex="3" />
      <Label text="Answer:" GridPane.rowIndex="4" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
