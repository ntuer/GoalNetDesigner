<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntu.goalnetdesigner.viewcontroller.login.LoginController">
	<padding>
		<Insets bottom="10" left="25" right="25" top="25" />
	</padding>
   <children>
   	<Text text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
   
   	<Label text="User Name:" GridPane.rowIndex="3" />
   
   	<TextField fx:id="usernameField" text="lisiyao" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
   	<Label text="Password:" GridPane.rowIndex="4" />
   
   	<PasswordField fx:id="passwordField" text="lisiyao" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   	<HBox alignment="CENTER" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="6">
      <children>
      		<Button onAction="#handleSubmitButtonAction" text="Sign In" />
            <Button mnemonicParsing="false" onAction="#registerClicked" text="Register" />
            <Button mnemonicParsing="false" onAction="#resetPasswordClicked" text="Reset Password" />
      </children>
   	</HBox>
   
   	<Text fx:id="actiontarget" wrappingWidth="98.0" GridPane.rowIndex="5" />
      <Label text="Server to Connect:" GridPane.rowIndex="2" />
      <TextField fx:id="serverAddressField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
